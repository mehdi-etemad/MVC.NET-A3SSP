<!DOCTYPE html>
<html lang="en">
    <head>
        <title>@Page.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta charset="UTF-8" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Public/bootstrap.min.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Public/framework.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Public/theme.css")" />
        @if (ViewBag.CSS != null) {
            foreach (string CSSFile in ViewBag.CSS)
            {
        <link rel="stylesheet" type="text/css" href="@Url.Content(@CSSFile)" />
            }
        }
    </head>
    <body>
        <!-- Modal Box -->
        <div class="modal fade" id="ModalBox" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer"></div>
                </div>
            </div>
        </div>
        <!-- Header -->
        <header class="container-fluid">
            <div class="row">
                <div class="col-sm-2 HeaderLogo">
                    <img src="@Url.Content("~/Public/Image/logo.png")" width="213" height="121" />
                </div>
                <div class="col-sm-10 HeaderUser">USER</div>
            </div>
        </header>
        <main class="container-fluid">
            <div class="row">
                <div class="col-sm-2 MainMenu">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/CompanyType">Company Type</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Company">Company</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Dropdown
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#"></a></li>
                                        <li><a class="dropdown-item" href="#"></a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-sm-10 MainContent">
                    @RenderBody()
                </div>
            </div>
        </main>
        <footer class="container-fluid">Copyright 2021</footer>
        <!--<script src="@Url.Content("~/Public/bootstrap.bundle.min.js")"></script>-->
        <script src="@Url.Content("~/Public/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/Public/jquery.min.js")"></script>
        <script src="@Url.Content("~/Public/framework.js")"></script>
        @if (ViewBag.JS != null)
        {
            foreach (string JSFile in ViewBag.JS)
            {
        <script src="@Url.Content(@JSFile)"></script>
            }
        }
    </body>
</html>